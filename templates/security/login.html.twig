{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión!{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
    <script type="text/javascript" src="{{ asset('assets/js/login.css') }}"></script>
    <style>
        .btn-primary {
            color: #fff;
            background-color: #06a5a0;
            border-color: #06a5a0;
        }
        #volver {
            margin-right: 100px;
        }
    </style>
    <div class="tile">
        <div class="tile-header">
            <h2 style="color: white; opacity: .75; font-size: 4rem; display: flex; justify-content: center; align-items: center; height: 100%;">INICIAR</h2>
        </div>
    
        <div class="tile-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <label class="form-input">
                    <i class="material-icons">person</i>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                    <span class="label">E-mail</span>
                    <span class="underline"></span>
                </label>
        
                <label class="form-input">
                    <i class="material-icons">lock</i>
                    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <span class="label">Password</span>
                    <div class="underline"></div>
                </label>
                <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Recordar
                        </label>
                </div>
                <div class="submit-container clearfix" style="margin-top: 2rem;">
                    <a id="volver" class="btn btn-primary" href="{{ path('app_inicio') }}" role="button">Volver</a>
                    <button class="btn btn-primary" type="submit">Iniciar Sesión </button>
                    <div class="login-pending">
                        <div class=spinner>
                            <span class="dot1"></span>
                            <span class="dot2"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

